{
    "name": "@primecare/cypress-test",
    "version": "1.0.0",
    "description": "Enterprise Cypress Test Suite for PSW App",
    "scripts": {
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/mochawesome.json",
        "report:html": "marge cypress/reports/mochawesome.json -f index -o cypress/reports/html",
        "test:smoke": "cypress run --env grepTags=@smoke",
        "test:security": "cypress run --env grepTags=@security",
        "test:regression": "cypress run --env grepTags=@regression",
        "test:ci": "cypress run && npm run report:merge && npm run report:html",
        "cy:smoke": "npm run test:smoke",
        "cy:security": "npm run test:security",
        "cy:regression": "npm run test:regression"
    },
    "devDependencies": {
        "cypress": "^13.6.4",
        "typescript": "^5.3.3",
        "mochawesome": "^7.1.3",
        "mochawesome-merge": "^4.3.0",
        "mochawesome-report-generator": "^6.2.0",
        "cypress-multi-reporters": "^1.6.4",
        "mocha-junit-reporter": "^2.2.1"
    }
}